<div class="devise_headline">

  <h2>Log in</h2>
</div>

<div class="devise_login">

  <%= simple_form_for(resource, as: resource_name, html: {id: "login_user"}, url: session_path(resource_name)) do |f| %>
    


   
    
    
    <label class="edit_label login_email_label" for="user_email">email</label> 
    

    <%= f.input_field :email, autocomplete: "email" %>
    
    
    <% if resource.errors[:email].any? %>
      <span class="email_error"><%= resource.errors[:email][0] %> </span>
    <% end %>
    

    




    <label class="edit_label login_password_label" for="user_change_password">create password</label> 
    

    <%= f.password_field :password, autocomplete: "new-password", label: false %>
    
    
    <% if resource.errors[:password].any? %>
      <span class="change_error"><%= resource.errors[:password][0] %> </span>
    <% end %>






    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
    <%=render "devise/shared/links" %>

  <% end %>
</div>

