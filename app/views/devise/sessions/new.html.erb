

<div class="devise_login">

  <%= simple_form_for(resource, as: resource_name, html: {id: "login_user"}, url: session_path(resource_name)) do |f| %>
    
  <div class="form_title">

    <%= image_tag("cwa3122.webp", height: '40', width: '40') %>
    <span> Login</span>
  </div>

   
    
    
    <label class="edit_label login_email_label" for="login_email">email</label> 
    

    <%= f.input_field :email, autocomplete: "email", label: false, id: "login_email" %>
    
    
    <% if resource.errors[:email].any? %>
      <span class="email_error"><%= resource.errors[:email][0] %> </span>
    <% end %>
    

    




    <label class="edit_label login_password_label" for="login_password">create password</label> 
    

    <%= f.password_field :password, autocomplete: "new-password", label: false, id: "login_password" %>
    
    
    <% if resource.errors[:password].any? %>
      <span class="change_error"><%= resource.errors[:password][0] %> </span>
    <% end %>

    
    <%= f.submit "Log in", id: "login_button", class: "btn"%>
    




    <% if devise_mapping.rememberable? %>
      
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      
    <% end %>

    <div class="links">
      <%=render "devise/shared/links" %>
    </div>

  <% end %>
</div>

