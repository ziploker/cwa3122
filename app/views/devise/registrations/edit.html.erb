<h2>Edit <%= resource_name.to_s.humanize %></h2>





<%= simple_form_for(resource, as: resource_name, url: registration_path(
  resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    
  <%= f.label :uid %><br />
  <%= f.input :uid, required: true, autofocus: true, label: false, disabled: true, :input_html => { :value => current_user.uid } %></br>
  
  
  <%= f.label :first_name %><br />
  <%= f.input :first_name, label: false, required: true, :input_html => { :value => current_user.first_name } %></br>
  

  <%= f.label :last_name %><br />
  <%= f.input :last_name, required: true, label: false, :input_html => { :value => current_user.last_name } %></br>


  <%= f.label :email %><br />
  <%= f.email_field :email, autocomplete: "email", disabled: true %><br/><br/>
 

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div><br/>
  <% end %>


  <%= f.label "change password" %><br/>
  <i>(leave blank if you don't want to change it)</i><br />
  
  <%= f.password_field :password, autocomplete: "new-password", label: false %><br/>
  
  

  <%= f.label "confirm new password" %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br/><br/>


  <%= f.label :current_password %> <br/><i>(we need your current password to confirm any changes)</i><br />
  <%= f.password_field :current_password, label: false, autocomplete: "current-password" %><br/><br/>


  <%= f.label "current logo"  %><br/>
  <div class="avatar_wrapper_current">

    <div class="upload-preview">
      


    <% if current_user.avatar.attached? && current_user.avatar.variable?%>
      

      

      <%= image_tag current_user.avatar.variant(resize_to_limit: [100, 100]) %>
      

    <%else%>


        

   
        
      <%= image_tag("man100px.png", height: '150', width: '150') %>
    <% end %>

    


    <div class="avatar_wrapper"><br/><br/>
     
      
      <%= f.file_field :avatar, class: "file" %>


    </div>
    




 




 






  

  <%= f.submit "Update" %>
 
<% end %>

