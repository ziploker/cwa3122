<div class="devise_headline">

  <h2><%= image_tag("cwa3122.webp", height: '40', width: '40') %></div>
MyAccount</h2>

</div>

<%= render "devise/shared/error_messages", resource: resource %>

<div class="devise_login">
  


  <%= simple_form_for(resource, as: resource_name, url: registration_path(
  resource_name), html: { method: :put }) do |f| %>
    
    

    <!--<%= f.error_notification %>-->



    
    <!-- <div class="devise_upper"> -->
    <label id="edit_uid_label" class="edit_label" for="user_uid">uid</label> 
    <%= f.input_field :uid, required: true, autofocus: true, disabled: true, :input_html => { :value => current_user.uid } %>

    
    <label id="edit_first_name_label" class="edit_label" for="user_first_name">first name</label> 
    <%= f.input_field :first_name, required: true, :input_html => { :value => current_user.first_name } %>
    
    <label id="edit_last_name_label" class="edit_label" for="user_last_name">last name</label> 
    <%= f.input_field :last_name, required: true, :input_html => { :value => current_user.last_name } %>


    <label id="edit_email_label" class="edit_label" for="user_email">email</label> 
    <%= f.input_field :email, autocomplete: "email", disabled: true %>
   

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div><br/>
    <% end %>

    <label id="edit_current_label" class="edit_label" for="user_current_password">current password</label> 
    <%= f.password_field :current_password, label: false, autocomplete: "current-password" %>

    
    <label id="edit_change_label" class="edit_label" for="user_change_password">new password</label> 
    <%= f.password_field :password, autocomplete: "new-password", label: false %>
    
    
    <label id="edit_confirm_label" class="edit_label" for="user_confirm_new_password">confirm password</label> 
    <%= f.password_field :password_confirmation, autocomplete: "new-password", label: false %>


    <!--</div>-->

      















    <label id="edit_avatar_label" class="button_to_change_avatar" for="fileSwitch">change avatar??</label>


      <div id="edit_avatar" class="upload-preview">
        


        <% if user_signed_in? && current_user.avatar.attached? && current_user.avatar.variable?%>
          

          

          <%= image_tag current_user.avatar.variant(resize_to_limit: [100, 100]) %>
          

        <%else%>


            

       
            
          <%= image_tag("man100px.png", height: '150', width: '150') %>
        <% end %>

      </div>
    


     
       
        
        <%= f.file_field :avatar, class: "file", id: "fileSwitch" %>
        


      

      
        <%= f.button :submit, "Confirm Changes", id: "edit_button" %>
       

  
 




    


  <% end %>




 

</div>






 




 






 