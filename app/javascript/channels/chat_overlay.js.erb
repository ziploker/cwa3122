$(document).ready(function (){

	

	$('.bar').hide();
	$('#overlay').hide();
	$('#talk').hide();
	



	$(".toggle_chat").click(function(){

		//alert(document.getElementById("default_wrapper").className);
		
		if (document.getElementById("default_wrapper").className == "default_wrapper"){

			$(".default_wrapper").attr('class', 'default_wrapper_overlay');
			$(".video_section").attr('class', 'video_section_overlay');
			
			$('.expand_menu_checkbox').prop('checked', false);
			$('.hamburger_to_x_checkbox').prop('checked', false);



			$("#chat_section").hide();
			
			$('.bar').show();
			$('#overlay').show();
			$('#talk').show();
			



		}else if (document.getElementById("default_wrapper").className == "default_wrapper_overlay"){

			$(".default_wrapper_overlay").attr('class', 'default_wrapper');
			$(".video_section_overlay").attr('class', 'video_section');

			$('.expand_menu_checkbox_overlay').prop('checked', false);
			$("#chat_section").show();
			
			$('.bar').hide();
			$('#overlay').hide();
			$('#talk').hide();
			//$('.bar').hide();
		
		}
	});




	var chk1 = $("input[type='checkbox'][class='expand_menu_checkbox']");
	var chk2 = $("input[type='checkbox'][class='hamburger_to_x_checkbox']");

	chk1.on('change', function(){
  		chk2.prop('checked',this.checked);
	});

});