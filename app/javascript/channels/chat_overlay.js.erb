$(document).ready(function (){

	

	$('.bar').hide();
	$('#overlay').hide();
	$('#talk').hide();
	



	$(".toggle_chat").click(function(){

		//alert(document.getElementById("default_wrapper").className);
		
		

		//default wrapper is when screen is big and videos on the left and chat
		//is on the right

		if (document.getElementById("default_wrapper").className == "default_wrapper"){

			$(".default_wrapper").attr('class', 'default_wrapper_overlay');
			$(".video_section").attr('class', 'video_section_overlay');
			
			$('.expand_menu_checkbox').prop('checked', false);
			$('.hamburger_to_x_checkbox').prop('checked', false);



			$("#chat_section").hide();
			
			$('.bar').show();
			$('#overlay').show();
			$('#talk').show();
			

		//default wrapper overlay is when chat is overlayed on video

		}else if (document.getElementById("default_wrapper").className == "default_wrapper_overlay"){

			$(".default_wrapper_overlay").attr('class', 'default_wrapper');
			$(".video_section_overlay").attr('class', 'video_section');

			$('.expand_menu_checkbox_overlay').prop('checked', false);
			$('.expand_menu_checkbox_overlay_clone').prop('checked', false);

			$("#chat_section").show();
			
			$('.bar').hide();
			$('#overlay').hide();
			$('#talk').hide();
			//$('.bar').hide();
		
		}
	});




	var chk1 = $("input[type='checkbox'][class='expand_menu_checkbox']");
	var chk2 = $("input[type='checkbox'][class='hamburger_to_x_checkbox']");

	var chk3 = $("input[type='checkbox'][class='expand_menu_checkbox_overlay']");
	var chk4 = $("input[type='checkbox'][class='expand_menu_checkbox_overlay_clone']");

	chk1.on('change', function(){
  		chk2.prop('checked',this.checked);
	});

	chk3.on('change', function(){
  		chk4.prop('checked',this.checked);
	});




	/////////////////////whos online button /////////////////////

	$('.whosOnlineBtn').click(function(){


		$('.expand_menu_checkbox_overlay').prop('checked', false);
		$('.expand_menu_checkbox_overlay_clone').prop('checked', false);

		$('.expand_menu_checkbox').prop('checked', false);
		$('.hamburger_to_x_checkbox').prop('checked', false);


		$('.whos_online').css('z-index', '1');
		$('.Chat').text("Online participants");
		$('.hamburger_menu_label').hide();
		$('.back_btn').show();
	

	});


	$('.back_btn').click(function(){

		$('.whos_online').css('z-index', '-1');
		$('.Chat').text("Chat Window");
		$('.back_btn').hide();
		$('.hamburger_menu_label').show();


	});


});